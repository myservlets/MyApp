<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/recruitment_item"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:orientation="horizontal"
              android:background="@drawable/shape_bottom_line">

    <ImageView
            android:id="@+id/recruitment_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_image_heads"
            android:src="@drawable/nav_head"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:id="@+id/recruitment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:textSize="17dp"
                android:text="任务名称"/>

        <TextView
                android:id="@+id/recruitment_info"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="任务描述"
                android:textSize="10dp"
                android:maxLines="3"
                android:ellipsize="end"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/shape_bottom_line"
                android:gravity="right">
            <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">
                <ImageView
                        android:id="@+id/image_hot"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_image_heads"
                        android:src="@drawable/nav_head"/>
                <TextView
                        android:id="@+id/hot_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="热度xx"
                        android:textSize="8dp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">
                <ImageView
                        android:id="@+id/image_tran"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_image_heads"
                        android:src="@drawable/nav_head"/>
                <TextView
                        android:id="@+id/tran_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="转发量112"
                        android:textSize="8dp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp">
                <ImageView
                        android:id="@+id/image_chat"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_image_heads"
                        android:src="@drawable/nav_head"/>
                <TextView
                        android:id="@+id/recruitment_chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="转发量112"
                        android:textSize="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
