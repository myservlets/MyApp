<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/recruitment_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/shape_job_item_bottom_line"
              android:padding="8dp"
            >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:id="@+id/job_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JAVA软件工程师"
                android:textSize="20sp"
                android:textColor="@color/black_color"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
        />
        <TextView
                android:id="@+id/job_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10k-20k"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
        />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="腾讯公司"
                android:textSize="16sp"
                android:layout_margin="8dp"
        />
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <TextView
                android:id="@+id/company_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京 海淀区 中关村"
                android:textSize="14sp"
                android:layout_margin="8dp"
                android:padding="6dp"
                android:background="@drawable/shape_gray_lable"
        />
        <TextView
                android:id="@+id/experience_requirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-2年"
                android:textSize="14sp"
                android:layout_margin="8dp"
                android:padding="6dp"
                android:background="@drawable/shape_gray_lable"
        />
        <TextView
                android:id="@+id/education_requirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本科"
                android:textSize="14sp"
                android:layout_margin="8dp"
                android:padding="6dp"
                android:background="@drawable/shape_gray_lable"
        />
    </LinearLayout>

</LinearLayout>
