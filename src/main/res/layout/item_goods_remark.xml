<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/vertical_wrap_linger">
    <LinearLayout style="@style/horizontal_wrap_linger"
                  android:paddingStart="16dp"
                  android:paddingEnd="16dp"
                  android:paddingTop="8dp"
                  android:paddingBottom="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/remarker_icon"
                android:src="@color/colorPrimary"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
            <TextView android:id="@+id/remarker_name"
                    android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_marginStart="8dp"
                      android:textSize="16sp"
                      android:textColor="@color/black_color"
                      android:text="用户名"/>
            <TextView android:id="@+id/remarker_score"
                      android:layout_below="@+id/remarker_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="8dp"
                      android:textColor="@color/black_color"
                      android:text="1.2"/>
            <TextView android:id="@+id/remark_date"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:textColor="@color/black_color"
                      android:textSize="12sp"
                      android:text="2019/4/10"/>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout style="@style/vertical_wrap_linger"
                  android:layout_marginStart="40dp"
                  android:paddingTop="8dp"
                  android:paddingBottom="8dp"
                  android:paddingStart="16dp"
                  android:paddingEnd="16dp">
        <TextView android:id="@+id/remarks"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black_color"
                  android:textSize="16sp"
                  android:text="@string/app_name"/>
        <ImageView android:id="@+id/remark_photo"
                   android:layout_width="128dp"
                   android:layout_height="128dp"
                   android:layout_marginTop="8dp"
                   android:src="@drawable/book"/>
    </LinearLayout>
</LinearLayout>