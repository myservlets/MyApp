<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/pro_Toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary">
        <Button
                android:id="@+id/ret_pro"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/left_arraw_icon"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/oppose_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务详情"
                android:textSize="15sp"
                android:textColor="#fff"
                android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="197dp"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/recruit_image"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/nav_head" android:cropToPadding="false" android:adjustViewBounds="false"
                    android:scaleType="center"/>
            <TextView
                    android:text="发布人："
                    android:layout_width="match_parent"
                    android:layout_height="40dp" android:id="@+id/recruit_user_name" android:textAlignment="center"
                    android:visibility="visible"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/recruit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="任务名称"
                    android:textSize="18sp" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/recruit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="价格："
                    android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/recruit_describe"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="详细介绍"
                    android:background="@drawable/shape_bottom_line"

            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:gravity="right">
            <ImageView
                    android:id="@+id/image_share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/shape_image_heads"
                    android:src="@drawable/nav_head"/>
            <ImageView
                    android:id="@+id/image_kefu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/shape_image_heads"
                    android:src="@drawable/nav_head"/>
            <ImageView
                    android:id="@+id/image_add"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_image_heads"
                    android:src="@drawable/nav_head"/>
            <ImageView
                    android:id="@+id/image_buy"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_image_heads"
                    android:src="@drawable/nav_head"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>